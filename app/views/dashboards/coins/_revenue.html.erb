<div class="card mb-4">
  <div class="bg-<%= data[:difference].positive? ? 'success' : 'danger' %> text-white card-body">
    <div class="d-flex align-items-center"> <i class="ion ion-md-cash"></i>&nbsp; <%= I18n.t('labels.total_revenue') %> </div>
    <div class="d-flex align-items-center position-relative mt-4" style="height:140px;">
      <div class="w-100 position-absolute" style="height:140px;top:0;">
      </div>
      <div class="w-100 text-center text-xlarge"><%= data[:value].round(2) %></div>
    </div>
  </div>
  <div class="card-footer border-0 text-center py-3">
    <div class="row">
      <div class="col">
        <div class="text-muted small mb-1">Currently up by: </div>
        <span class="text-big text-<%= data[:difference].positive? ? 'success' : 'danger' %>"><%= @data[:difference].round(2) %></span>
      </div>
    </div>
  </div>
</div>
